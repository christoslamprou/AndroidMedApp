<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical" android:padding="16dp">

        <EditText
            android:id="@+id/etShort"
            android:hint="@string/hint_short_name"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etDesc"
            android:hint="@string/hint_description"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="12dp"
            android:text="@string/label_time_term"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/spTerm"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="12dp"
            android:text="@string/label_start"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvStart"
            android:padding="8dp"
            android:background="#eeeeee"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="8dp"
            android:text="@string/label_end"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvEnd"
            android:padding="8dp"
            android:background="#eeeeee"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etDocName"
            android:hint="@string/hint_doctor_name"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etDocLoc"
            android:hint="@string/hint_doctor_location"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnSave"
            android:text="@string/btn_save"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
